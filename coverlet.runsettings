<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat Code Coverage">
        <Configuration>
			<Format>cobertura</Format>

			<!-- Donâ€™t count tests themselves -->
			<IncludeTestAssembly>false</IncludeTestAssembly>

			<!-- Exclude build output + generated code -->
			<ExcludeByFile>**/obj/**;**/bin/**;**/*.g.cs;**/*.generated.cs;**/*Generated*.cs;**/FitnessBooking.Api/**</ExcludeByFile>

			<!-- Exclude assemblies (business-logic only) -->
			<Exclude>[FitnessBooking.Api]*,[System.*]*,[Microsoft.*]*</Exclude>

			<!-- Exclude common generated-code markers -->
			<ExcludeByAttribute>GeneratedCodeAttribute;CompilerGeneratedAttribute</ExcludeByAttribute>
		</Configuration>

      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>
